<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 设置页样式 -->
    <style name="setting_title_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="setting_list_src">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="setting_list_home_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="setting_list_linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="setting_list_title_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="setting_list_detail_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- PopupWindow List样式 -->
    <style name="note_edit_popup_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

</resources>