<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ic_notes_item_ll"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/widget_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ic_notes_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/widget_title_color"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/ic_notes_item_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_notes_item_title_tv"
        android:textColor="@color/widget_content_color"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/ic_notes_item_data_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textColor="@color/widget_date_color"
        android:textSize="10dp" />

</RelativeLayout>
